%table.item-information__various-info
  %tr
    %th 
      出品者
    %td 
      = @item.user.nickname
  %tr
    %th 
      カテゴリー
    %td
      .category_parent
        = link_to @item.category.parent.parent.name, "#", class: "category-link"
      .category_chidren
        = link_to @item.category.parent.name, "#", class: "category-link"
      .category_grandchidren
        = link_to @item.category.name, "#", class: "category-link"
  %tr
    %th 
      発送元地域
    %td 
      = @item.prefecture.name
  %tr
    %th 
      商品の状態
    %td 
      = @item.status.name
  %tr
    %th 
      配送料の負担
    %td   
      = @item.shipping_fee.name
  %tr
    %th 
      発送方法
    %td
      = link_to "#{@item.shipping_way.name}", "#", class: "shipping-area-link"
  %tr
    %th 
      発送元地域
    %td
      = @item.prefecture.name
  %tr
    %th 
      発送日の目安
    %td 
      = @item.shipping_day.name